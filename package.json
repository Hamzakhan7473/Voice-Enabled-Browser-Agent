{
  "name": "voice-enabled-browser-agent",
  "version": "2.0.0",
  "description": "Production-grade browser automation agent with AI reasoning and web interaction",
  "main": "dist/agent/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/agent/index.js",
    "start:legacy": "node src/index.js",
    "dev": "tsc && node dist/agent/index.js",
    "dev:watch": "tsc --watch",
    "cli": "MODE=cli node dist/agent/index.js",
    "verify": "node verify-connection.js",
    "verify:api": "node verify-api-integration.js",
    "verify:all": "npm run verify && npm run verify:api",
    "test": "jest",
    "test:integration": "node test-integration.js",
    "docker:build": "docker build -t browser-agent .",
    "docker:run": "docker-compose up"
  },
  "keywords": [
    "browser-automation",
    "ai-agent",
    "playwright",
    "openai",
    "web-scraping",
    "operator"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@deepgram/sdk": "^3.4.0",
    "@fastify/cors": "^9.0.1",
    "@fastify/static": "^7.0.1",
    "@mozilla/readability": "^0.5.0",
    "axios": "^1.6.0",
    "better-sqlite3": "^11.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fastify": "^4.26.0",
    "fs-extra": "^11.1.1",
    "jsdom": "^24.0.0",
    "node-record-lpcm16": "^1.0.1",
    "openai": "^4.20.1",
    "playwright": "^1.47.0",
    "socket.io": "^4.7.4",
    "speaker": "^0.5.4",
    "uuid": "^9.0.1",
    "wav": "^1.0.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "typescript": "^5.3.3"
  }
}
